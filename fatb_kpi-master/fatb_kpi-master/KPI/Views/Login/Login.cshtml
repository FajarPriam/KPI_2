
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - KPI</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Content/assets/css/app.css">
    <link rel="stylesheet" href="~/Content/assets/css/pages/auth.css">
</head>

<body>
    <input type="text" id="hd_path" value="@Session["path_api"]" hidden/>

    <div id="auth">

        <div class="row h-100">
            <div class="col-lg-5 col-12">
                <div id="auth-left">
                    <div class="auth-logo">
                        <h1 class="auth-title text-center">KPI</h1>
                    </div>
                    <h1>Login</h1>
                    <form action="javascript:login()">
                        <div class="form-group position-relative has-icon-left mb-2">
                            <input type="text" class="form-control form-control-md" placeholder="kNRP" id="nrp">
                            <div class="form-control-icon">
                                <i class="bi bi-person"></i>
                            </div>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-2">
                            <input type="password" class="form-control form-control-md" placeholder="Password" id="password">
                            <div class="form-control-icon">
                                <i class="bi bi-shield-lock"></i>
                            </div>
                        </div>
                        <div class="divider">
                            <div class="divider-text">
                                Select Role
                            </div>
                        </div>
                        <div class="form-group mb-2">
                            <select class="choices form-select" id="role">
                            </select>
                        </div>
                        <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5" id="btn-login">Log in</button>
                        <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5" type="button" disabled id="btn-loading" hidden>
                            <span class="spinner-grow spinner-grow-sm" role="status"
                                  aria-hidden="true"></span>
                            <span class="visually-hidden">Loading...</span>
                        </button>
                    </form>
                </div>
            </div>
            <div class="col-lg-7 d-none d-lg-block">
                <div id="auth-right">
                </div>
            </div>
        </div>

    </div>

    <script src="~/Content/assets/vendors/jquery/jquery.min.js"></script>
    <script src="~/Scripts/Page_Login.js"></script>

</body>

</html>