                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4">
                                <label>KPI</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input type="text" name="EDIT_BY" class="form-control" value="@Session["Nrp"].ToString()" hidden>
                                <input type="text" id="ID_KPI_ON_edit" name="ID_KPI_ON" class="form-control" hidden>
                                <input type="text" id="NAME_KPI_ON_edit" name="NAME_KPI_ON_edit" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped" id="tbl_MappingKPION">
                                <thead>
                                    <tr>
                                        <th class="text-center" scope="col">ID</th>
                                        <th class="text-center" scope="col">Action</th>
                                        <th class="text-center" scope="col">KPI Code</th>
                                        <th class="text-center" scope="col">KPI Deskripsi</th>
                                        <th class="text-center" scope="col">Bobot</th>
                                        <th class="text-center" scope="col">PIC</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div id="btn_AddMappingON"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btn_closeMappingKPION" type="button" class="btn btn-light-secondary"
                            data-bs-dismiss="modal">
                        <i class="bx bx-x d-block d-sm-none"></i>
                        <span class="d-none d-sm-block">Close</span>
                    </button>
                    <button type="submit" class="btn btn-primary ml-1">
                        <i class="bx bx-check d-block d-sm-none"></i>
                        <span class="d-none d-sm-block">Submit</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Page_MasterMappingKPI.js"></script>
}